<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender for displaying logs in the console -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File appender for writing logs to a file with daily rotation -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>target/logs/test-execution.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>target/logs/archived/test-execution-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>50MB</maxFileSize> // Maximum size of each log file
            <maxHistory>30</maxHistory> // Maximum number of days to keep old log files
            <totalSizeCap>1GB</totalSizeCap> // Maximum total size of all log files
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{40} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Daily file appender that creates a new file each day -->
    <appender name="DAILY_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>target/logs/daily/test-execution-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory> // Maximum number of days to keep old log files
            <totalSizeCap>500MB</totalSizeCap> // Maximum total size of all log files
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{40} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- ReportPortal appender to forward logs to ReportPortal -->
    <appender name="ReportPortalAppender" class="com.epam.reportportal.logback.appender.ReportPortalAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger configuration -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="DAILY_FILE"/>
        <appender-ref ref="ReportPortalAppender"/>
    </root>

    <!-- Package-specific logging levels -->
    <logger name="org.automationexercise" level="DEBUG"/>
    <logger name="org.openqa.selenium" level="WARN"/>
    <logger name="io.github.bonigarcia.wdm" level="WARN"/>
</configuration>
